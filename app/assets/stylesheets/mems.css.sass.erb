$align-mem-div: center
$float-photos-div: none

#mem-div
	text-align: $align-mem-div
#edit-div
	margin: 0 30px 0 0
a.edit-link:link,:visited

a.edit-link:hover

.photos-div
	display: inline-block
	position: relative
	margin: 0 0 0 0
	padding: 0 0 0 0
	line-height: 0
	float: $float-photos-div
.photos-info-div
	display: none
	position: absolute